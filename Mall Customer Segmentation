import pandas as pd

# Load the dataset
file_path = '/mnt/data/Mall_Customers (1).csv'
data = pd.read_csv(file_path)

# Display the first few rows of the dataset
print(data.head(10))

# Check for missing values
count = data.isnull().sum()
print(count)

# Fill missing values for 'Age' with the mean
mean_age = data['Age'].mean()
data["Age"].fillna(mean_age, inplace=True)

# Drop rows with any remaining missing values (if any)
data.dropna(inplace=True)

# Check again for missing values to confirm
count = data.isnull().sum()
print(count)

# Encode 'Gender' column
data['Gender'] = data['Gender'].map({'Male': 0, 'Female': 1})

# Renaming columns for better readability
data.columns = ["CustomerID", "Gender", "Age", "AnnualIncome", "SpendingScore"]

# Save the cleaned dataset
data.to_csv('cleaned_mall_customers.csv', index=False)
print(data.head(10))




